/* General styles */
body {
    font-family: Arial, sans-serif;
    background-color: #f9f9f9;
    margin: 0;
    padding: 0;
}

h1, h2 {
    text-align: center;
    color: #333;
}

#user-view {
    padding: 20px;
}

/* Style for the charger wrapper */
.charger-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 10px;
}

/* Style for the charger icon */
.charger-icon {
    width: 50px;
    height: 50px;
    cursor: pointer;
}

/* Style for the pop-up */
.status-popup {
    position: absolute;
    background-color: white;
    border: 1px solid #ccc;
    padding: 10px;
    display: flex;
    flex-direction: column;
    z-index: 1000;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
}

/* Style for status options in the pop-up */
.status-option {
    width: 30px;
    height: 30px;
    cursor: pointer;
    margin: 5px 0;
}

/* Style for ETC and comments input fields */
.etc-input, .comments-input {
    margin-top: 10px;
    width: 100px;
    text-align: center;
    padding: 5px;
    border: 1px solid #ccc;
    border-radius: 4px;
}

/* Greyed out inputs */
.etc-input[disabled], .comments-input[disabled] {
    background-color: #f0f0f0;
    cursor: not-allowed;
}

/* Charger container styles */
#chargers {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 20px;
}

/* Responsive layout for chargers */
.row {
    display: flex;
    justify-content: center;
    margin-bottom: 20px;
}

@media (max-width: 600px) {
    .charger-wrapper {
        width: 100%;
        margin: 5px;
    }

    .charger-icon {
        width: 40px;
        height: 40px;
    }

    .status-option {
        width: 25px;
        height: 25px;
    }

    .etc-input, .comments-input {
        width: 80px;
    }
}
